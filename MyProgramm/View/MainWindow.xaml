<Window x:Class="MyProgramm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProgramm" 
        xmlns:local11="clr-namespace:MyProgramm.Model"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:MyProgramm.viewModel" 
        Title="MainWindow" Height="450" Width="800" 
        FontSize="18"  Background="#2A3756">
    
    <Window.DataContext>
        <vm:DataExercisesStandart/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="Background" Value="#1D1F2A" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="Background" Value="#1D1F2A" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style TargetType="ListView">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="Background" Value="#2A3756" />
            <Setter Property="Foreground" Value="White" />
        </Style>

    </Window.Resources>
    <DockPanel Background="#2A3756">
        <!--меню-->
        <Menu DockPanel.Dock="Top" FontSize="16" Background="#1D1F2A" Foreground="white" BorderBrush="#FF828790">
            <MenuItem Header="Настройки">
                <MenuItem Header="пусто"/>
                <MenuItem Header="Выйти"/>
            </MenuItem>
            <MenuItem Header="пусто"/>
        </Menu>
        <TabControl DockPanel.Dock="Top" Background="#2A3756">
            <!--Упражнения -->
            <TabItem Header="Упражнения" >
                <Grid Background="#2A3756">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="15*"/>
                        </Grid.RowDefinitions>
                    <ListView x:Name="ListViesMain" Grid.Row="0" Grid.Column="0"
                              ItemsSource="{Binding Path=listExercises}" SelectedItem="{Binding SelectedItemOfList}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Наименование упражнения" Width="auto"
                                                DisplayMemberBinding="{Binding NameExer}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <Grid Grid.Row="0" Grid.Column="1" DataContext="{Binding SelectedItemOfList}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="15*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5" TextWrapping="Wrap"
                                   Text="{Binding NameExer,  UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5 " TextWrapping="Wrap"  
                                   Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                        <Image Grid.Row="1" Grid.Column="1" Margin="5,5"  
                                   Source="{Binding ImageName, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <!--Представление в виде панелей (не реализованы кнопки) -->
