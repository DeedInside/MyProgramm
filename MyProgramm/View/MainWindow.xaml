                        </ItemsControl>
                </ScrollViewer>-->

                    <Button Grid.Row="1" Grid.Column="0"  DockPanel.Dock="Left" Content="Добавить упражнение" Margin="5,5" 
                            Command="{Binding OpenWinExercises}"/>
                    <DockPanel Grid.Row="1" Grid.Column="1" >
                        <Button DockPanel.Dock="Left" Content="Изменить упражнение" Margin="5,5"
                            Command="{Binding OpenWinEditionExercises }" IsEnabled="False" />
                        <Button DockPanel.Dock="Left" Content="Удалить" Width="100" HorizontalAlignment="Right" Margin="5,5" 
                            Command="{Binding delItem }" CommandParameter="{Binding SelectedItemOfList}"/>
                    </DockPanel>
                </Grid>
            </TabItem>
            <!--Тренеровки -->
            <TabItem Header="Тренеровки">

            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
