                                           Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        <Button Name="but" Grid.Row="2" Grid.Column="1" Content="Подробнее" Margin="5,5"
                                           Command="{Binding OpenWinExercises}"/>
                                    </Grid>
                                </DataTemplate>
